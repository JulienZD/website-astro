---
import ProjectCard from './ProjectCard.astro';
import type { Project } from '@/schemas/project';

export interface Props {
  projects: (Project & { slug: string })[];
}
const { projects } = Astro.props;
---

<div class="mb-8 grid grid-cols-1 gap-x-16 gap-y-16 lg:grid-cols-2">
  {
    projects.map(({ title, description, slug, image, linkText }) => (
      <ProjectCard
        title={title}
        description={description}
        image={image}
        href={`/projects/${slug}`}
        linkText={linkText}
      />
    ))
  }
</div>
